{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
            "type": "string",
            "minLength": 1,
            "defaultValue": "demouser",
            "metadata": {
              "description": "Username for the Virtual Machine."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "defaultValue": "demo@pass123",
            "metadata": {
              "description": "Password for the Virtual Machine."
            }
        },
        "smarthotelhostVMname": {
            "defaultValue": "SmartHotelHost",
            "type": "string",
            "metadata": {
                "description": "Name of the SmartHotel Host machine"
            }
        },
        "studentFilesUrl": {
            "type": "string",
            "defaultValue": "https://github.com/ciphertxt/cw-smart-hotel-360-iaas/raw/master/support/StudentFiles.zip"
        },
          "studentFilesDestination": {
            "type": "string",
            "defaultValue": "C:\\OpsgilityTraining"
        }
    },
    "variables": {
        "smarthotelhostNICname": "smarthotelhostnic",
        "smarthotelhostOSdisk": "[concat(parameters('smarthotelhostVMname'),'_OsDisk')]",
        "smarthotelhostDATAdisk": "[concat(parameters('smarthotelhostVMname'),'_DataDisk')]",
        "publicIPAddressName": "smarthotelhostip",
        "smarthotelVNETname": "smarthotelvnet",
        "addressPrefix": "10.0.0.0/16",
        "subnetPrefix": "10.0.0.0/24",
        "smarthotelSubnetname": "host",
        "smarthotelhostNSGname": "smarthotelhostnsg",
        "rdpRulename": "RDP",
        "customScriptFolder": "./",
        "customScriptUriScriptFileName": "BootStrapSmartHotelHost.ps1",
        "customScriptUri": "https://raw.githubusercontent.com/ciphertxt/cw-smart-hotel-360-iaas/master/scripts/BootStrapSmartHotelHost.ps1",
        "region": "[resourceGroup().location]"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('smarthotelhostVMname')]",
            "apiVersion": "2018-06-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_D8s_v3"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Windows",
                        "name": "[variables('smarthotelhostOSdisk')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        },
                        "diskSizeGB": 127
                    },
                    "dataDisks": [
                        {
                            "lun": 0,
                            "name": "[variables('smarthotelhostDATAdisk')]",
                            "createOption": "Attach",
                            "caching": "None",
                            "managedDisk": {
                                "id": "[resourceId('Microsoft.Compute/disks/', variables('smarthotelhostDATAdisk'))]"
                            }
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[parameters('smarthotelhostVMname')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "provisionVMAgent": true,
                        "enableAutomaticUpdates": true
                    },
                    "allowExtensionOperations": true
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('smarthotelhostNICname'))]"
                        }
                    ]
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('smarthotelhostNICname'))]",
                "[resourceId('Microsoft.Compute/disks/', variables('smarthotelhostDATAdisk'))]"
            ],
            "resources": [
                {
                  "name": "CustomSciptExtension2",
                  "type": "extensions",
                  "location": "[resourceGroup().location]",
                  "apiVersion": "2016-03-30",
                  "dependsOn": [
                    "[resourceId('Microsoft.Compute/virtualMachines', parameters('smarthotelhostVMname'))]"
                  ],
                  "tags": {
                    "displayName": "ConfigureHost"
                  },
                  "properties": {
                    "publisher": "Microsoft.Compute",
                    "type": "CustomScriptExtension",
                    "typeHandlerVersion": "1.4",
                    "autoUpgradeMinorVersion": false,
                    "settings": {
                      "fileUris": [
                        "[variables('customScriptUri')]"
                      ],
                      "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File ', variables('customScriptFolder'), '/', variables('customScriptUriScriptFileName'), ' -sourceFileUrl ', parameters('studentFilesUrl'), ' -destinationFolder ', parameters('studentFilesDestination'), ' -region ', variables('region'))]"
                    }
                  }
                }
              ]
        },
        {
            "type": "Microsoft.Compute/disks",
            "name": "[variables('smarthotelhostDATAdisk')]",
            "apiVersion": "2017-03-30",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS"
            },
            "properties": {
                "creationData": {
                    "createOption": "Empty"
                },
                "diskSizeGB": 1023
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('smarthotelhostNICname')]",
            "apiVersion": "2018-08-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPAddressName'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('smarthotelVNETname'), variables('smarthotelSubnetname'))]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('smarthotelhostNSGname'))]"
                },
                "primary": true,
                "virtualMachine": {
                    "id": "[resourceId('Microsoft.Compute/virtualMachines', parameters('smarthotelhostVMname'))]"
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', variables('publicIPAddressName'))]",
                "[resourceId('Microsoft.Network/virtualNetworks/', variables('smarthotelVNETname'))]"
            ]
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[variables('smarthotelhostNSGname')]",
            "apiVersion": "2018-08-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            "properties": {
                "securityRules": [
                    {
                        "name": "[variables('rdpRulename')]",
                        "properties": {
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "3389",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 300,
                            "direction": "Inbound",
                            "sourcePortRanges": [],
                            "destinationPortRanges": [],
                            "sourceAddressPrefixes": [],
                            "destinationAddressPrefixes": []
                        }
                    }
                ]
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "sku": {
                "name": "Basic",
                "tier": "Regional"
            },
            "name": "[variables('publicIPAddressName')]",
            "apiVersion": "2018-08-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            "properties": {
                "publicIPAddressVersion": "IPv4",
                "publicIPAllocationMethod": "Dynamic",
                "idleTimeoutInMinutes": 4,
                "ipTags": []
            },
            "dependsOn": []
        },
        {
            "apiVersion": "2016-03-30",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[variables('smarthotelVNETname')]",
            "location": "[resourceGroup().location]",
            "tags": {
              "displayName": "VirtualNetwork"
            },
            "properties": {
              "addressSpace": {
                "addressPrefixes": [
                  "[variables('addressPrefix')]"
                ]
              },
              "subnets": [
                {
                  "name": "[variables('smarthotelSubnetname')]",
                  "properties": {
                    "addressPrefix": "[variables('subnetPrefix')]"
                  }
                }
              ]
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups/securityRules",
            "name": "[concat(variables('smarthotelhostNSGname'), '/', variables('rdpRulename'))]",
            "apiVersion": "2018-08-01",
            "properties": {
                "protocol": "TCP",
                "sourcePortRange": "*",
                "destinationPortRange": "3389",
                "sourceAddressPrefix": "*",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 300,
                "direction": "Inbound",
                "sourcePortRanges": [],
                "destinationPortRanges": [],
                "sourceAddressPrefixes": [],
                "destinationAddressPrefixes": []
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('smarthotelhostNSGname'))]"
            ]
        }
    ]
}